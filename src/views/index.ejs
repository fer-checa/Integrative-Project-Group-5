<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

    <body>

        <%- include('./partials/header') %>
            <main>
                <br />

                <!-- CARUSEL -->
                <div class="container-slider" style="height: auto">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">

                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                        </ol>

                        <!-- Wrapper for slides 7 -->
                        <div class="carousel-inner">
                            <div class="item active ">
                                <img src="/img/home/banner5.jpg" alt="promocional" style="width:100%;">
                            </div>

                            <div class="item ">
                                <img src="/img/home/slider2.jpg" alt="promocional" style="width:100%;">
                            </div>

                            <div class="item ">
                                <img src="/img/home/banner4.jpg" alt="promocional" style="width:100%;">
                            </div>
                        </div>

                        <!-- Left and right controls -->
                        <a class=" left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>

                <!-- SECCION ENVIOS -->
                <div class="seccion-envios" style="text-align:center;">
                    <div class="row">
                        <section class="col-xs-12 col-sm-6 col-md-4 ">
                            <img src="/img/home/1.jpg" alt="compra"
                                class="text-align: center; margin: auto; margin-top: 10px;">
                            <p class="titulo">ENVIOS SIN CARGO</p>
                            <p class="subtitulo">Solo por estar registrado en MUNDO MASCOTA DH y si vivis hasta 6km de
                                cada sucursal el delivery es totalmente gratuito.</p>
                        </section>
                        <section class="col-xs-12 col-sm-6 col-md-4 ">
                            <img src="/img/home/2.jpg" alt="pago" class="text-align: center;">
                            <p class="titulo">MEDIOS DE PAGO</p>
                            <p class="subtitulo">Aceptamos pagos en efectivo, tarjetas de credito y mercado pago.
                                Recorda que tenés cuotas sin interés con tarjeta</p>
                        </section>
                        <section class="col-xs-12 col-sm-12 col-md-4 ">
                            <img src="/img/home/3.jpg" alt="envio" class="text-align: center;">
                            <p class="titulo">COMPRA SEGURA</p>
                            <p class="subtitulo">Gestionamos tus datos con absoluta confidencialidad. Ademas ¿No te
                                gusta? ¡Devolvelo! Aqui no hay nada que no puedas.</p>
                        </section>
                    </div>
                </div>

                <!-- TODOS LOS PORDUCTOS -->

                <div class="container products-wrapper">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="products-title">Productos para perros</h2>

                            

                        </div>

                        <% Perros.forEach(function(product){ let finalPrice=(product.precio * ((100 - product.descuento)
                            / 100)).toFixed(0) %>

                            <div class="col-12 col-sm-6 col-lg-3">
                                <section class="product-box" style="text-align:center;">
                                    <a href="/products/productDetail/<%= product.id %>">
                                        <figure class="product-box_image">
                                            <img src="<%= product.imagen %>" alt="imagen de producto"
                                                style="width:170px;">
                                        </figure>
                                        <article class="product-box_data">
                                            <h2>
                                                $ <%= finalPrice %>
                                            </h2>
                                            <span>
                                                <%= product.descuento %> %OFF
                                            </span>
                                            <p>
                                                <%= product.nombre %>
                                            </p>
                                            <i class="fas fa-paw iconito"></i>
                                        </article>
                                    </a>
                                </section>
                            </div>
                            <% }) %>
                    </div>

                    <img src="/img/home/banner-perros.jpg" alt="promocional" style="width:100%;">

                    <div class="container products-wrapper">
                        <div class="row">
                            <div class="col-12">
                                <h2 class="products-title">Productos para Gatos</h2>

                            </div>

                            <% Gatos.forEach(function(product){ let finalPrice=(product.precio * ((100 -
                                product.descuento) / 100)).toFixed(0) %>
                                <div class="col-12 col-sm-6 col-lg-3">
                                    <section class="product-box" style="text-align:center;">
                                        <a href="/products/productDetail/<%= product.id %>">
                                            <figure class="product-box_image">
                                                <img src="<%= product.imagen %>" alt="imagen de producto"
                                                    style="width:170px;">
                                            </figure>
                                            <article class="product-box_data">
                                                <h2>
                                                  $  <%= finalPrice %>
                                                </h2>
                                                <span>
                                                    <%= product.descuento %> %OFF
                                                </span>
                                                <p>
                                                    <%= product.nombre %>
                                                </p>

                                                <i class="fas fa-paw iconito"></i>
                                            </article>
                                        </a>
                                    </section>
                                </div>
                                <% }) %>
                        </div>
                    </div>

                    <img src="/img/home/banner-higiene.jpg" alt="promocional" style="width:100%;">

             
                    <%- include ('./partials/newsletter.ejs') %> 
            </main>
            
            
    </body>
    
            
    <%- include ('./partials/footer.ejs') %>

</html>